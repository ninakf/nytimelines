<h2>Edit Timeline</h2>

<%= simple_form_for @timeline do |form| %>
	<%= form.input :name, placeholder: 'Name' %><br>
	<%= form.input :summary, placeholder: 'Summary' %><br>
	<%= form.input :creator, placeholder: 'Creator' %><br>
	<%= form.button :submit %> 
<% end %>

<h4>Articles</h4>
<% @articles.each do |article| %>
	<%= article.name %><br>
	<%= article.author %><br>
	<%= article.date %><br><br>
<% end %>

<button><%= link_to "Go Back", timeline_path %></button>